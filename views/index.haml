%canvas{:id => "game", :class => "screen",  :width => "200", :height => "400"}

%div{:id => "menu", :class => "screen"}
  %h1 Le Tetris
  %ul{:class => "large-text"}
    %li{:id => "menu-new-game", :class => "clickable"} New game
    %li{:id => "menu-high-scores", :class => "clickable"} High scores

%div{:id => "game-paused", :class => "screen"}
  %h1 Le Tetris
  %ul{:class => "large-text"}
    %li{:id => "game-paused-resume-game", :class => "clickable"} Resume game
    %li{:id => "game-paused-quit-game", :class => "clickable"} Quit game

%div{:id => "game-over", :class => "screen"}
  %h1 Le Tetris
  %table
    %tr
      %td Score
      %td 4249
    %tr
      %td One-liners cleared
      %td 42
    %tr
      %td Two-liners cleared
      %td 11
    %tr
      %td Three-liners cleared
      %td 16
  %span{:id => "game-over-menu", :class => "clickable large-text"} Back to menu

%div{:id => "high-scores", :class => "screen"}
  %h1 Le Tetris
  %table
    %tr
      %th Rank
      %th Name
      %th Score
    %tr
      %td #1
      %td MEL
      %td 10780
    %tr
      %td #2
      %td VER
      %td 5655
    %tr
      %td #3
      %td MAR
      %td 5430
  %span{:id => "high-scores-menu", :class => "clickable large-text"} Back to menu

:javascript
  letetris.run();
